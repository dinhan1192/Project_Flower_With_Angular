@model IEnumerable<Project_MVC.Models.FlowersInOrderModel>
@using Project_MVC.Models
@using Project_MVC.Utils

<table class="table table-bordered table-hover" style="text-align:center;">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FlowerName)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th style="text-align:right">
                @Html.DisplayNameFor(model => model.TotalPricePerFlower)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    <img src="@item.ImageUrl" width="80" height="80" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlowerName)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td style="text-align:right">
                    @item.TotalPricePerFlower.ToString("C", FlowerUtility.UnitedStates)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }
    </tbody>
</table>
